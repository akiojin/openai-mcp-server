{
  "name": "@akiojin/openai-mcp-server",
  "version": "0.1.0",
  "description": "OpenAI API MCP Server - MCPサーバー経由でOpenAI APIを呼び出す",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "report:models": "npx tsx scripts/model-performance-report.ts",
    "report:models:save": "mkdir -p reports && npx tsx scripts/model-performance-report.ts > reports/model-performance-$(date +%Y%m%d-%H%M%S).md",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "commit": "npx git-cz",
    "commitlint": "commitlint --edit"
  },
  "keywords": [
    "mcp",
    "openai",
    "chatgpt",
    "model-context-protocol"
  ],
  "author": "Akio Jinsenji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akiojin/openai-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/akiojin/openai-mcp-server/issues"
  },
  "homepage": "https://github.com/akiojin/openai-mcp-server#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "dotenv": "^16.0.0",
    "openai": "^4.0.0",
    "pino": "^8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/pino": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^8.33.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "pino-pretty": "^10.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
